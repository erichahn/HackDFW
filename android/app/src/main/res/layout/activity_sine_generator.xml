<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:orientation="vertical"
android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".SineGenerator">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pad 1"
        android:id="@+id/textView2"
        android:layout_gravity="right"
        android:gravity="center" />

    <fragment android:name="tens_bucket.ptens.fragments.PadFragment"
        android:id="@+id/pad_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/pad_fragment" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pad 2"
        android:id="@+id/textView"
        android:layout_gravity="right"
        android:gravity="center" />

    <fragment android:name="tens_bucket.ptens.fragments.PadFragment"
        android:id="@+id/pad_2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/pad_fragment" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_str"
        android:id="@+id/start_button"
        android:onClick="start" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/stop_str"
        android:id="@+id/stop_button"
        android:enabled="false"
        android:onClick="stop" />

</LinearLayout>
