<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:orientation="vertical"
android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".SineGenerator">


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".SineGenerator"
            android:layout_height="wrap_content">

            <fragment android:name="tens_bucket.ptens.fragments.PadFragment"
                android:id="@+id/pad_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/pad_fragment"
                android:layout_below="@+id/switch1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <fragment android:name="tens_bucket.ptens.fragments.PadFragment"
                android:id="@+id/pad_2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/pad_fragment"
                android:layout_below="@+id/switch2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pad 1"
                android:id="@+id/switch1"
                android:checked="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:onClick="toggle"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pad 2"
                android:id="@+id/switch2"
                android:checked="true"
                android:layout_below="@+id/pad_1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:onClick="toggle"/>

        </RelativeLayout>

</ScrollView>
